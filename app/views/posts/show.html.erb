<p>
  <strong>Text:</strong>
  <%= @post.message %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>

  <%= form.label :body %>
  <%= form.text_field :body %>
  <%= form.submit "Submit" %>

<% end %>

<%= link_to 'Back', posts_path %>
